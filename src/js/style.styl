body-font = "Roboto", "Helvetica Neue", "San Francisco Display", sans-serif
header-font = "Overpass", "Raleway", "Helvetica Neue", "San Francisco Display", sans-serif

fgcolor = #2E3440
bgcolor = #EEECF4
maincolor = #C73450
seccolor = #FE4D5E
tercolor = #D487AD

*, *:before, *:after
	margin 0
	padding 0
	box-sizing border-box

:root
	font-size 22px

body
	background bgcolor
	color fgcolor

	height 100vh
	width 100vw

	overflow hidden

#app
	height 100%
	width 100%

//TYPOGRAPHY
h1, h2, h3, h4, h5, h6
	font-family header-font
	text-transform uppercase

h1
	letter-spacing -3px

//Stars
.star-container
	position absolute
	font-family body-font

	z-index 2

	transform translate(-50%, -50%) scale(0)
	transition transform .3s ease-in-out

	&.active
		transform translate(-50%, -50%) scale(1)
	
.star
	position relative
	user-select none
	cursor pointer

	border 1px fgcolor solid
	background bgcolor
	border-radius 100%
	padding .5em

	height 2.5em
	width 2.5em

	display flex
	align-items center
	justify-content center

	transition all .3s ease-in-out

	&:hover, &.active
		box-shadow 0px 0px 10px 2px maincolor
		border 1px maincolor solid
		color maincolor

.star-menu
	position absolute
	width 10rem
	left 3.75rem 
	top 0

	background rgba(bgcolor, .9)
	padding .5em
	margin-top -.5em
	border-radius 4px

	font-size .8em

	transform scale(1, 0) 
	transform-origin 0 0
	transition transform .2s ease-in-out

	&.active
		transform scale(1, 1)

	input[type='text']
		appearance none
		outline none
		border none
		background transparent

		font-family body-font
		font-size 1.1em
		padding .2em 0
		margin-bottom .5em

		width 100%

		border-bottom 2px fgcolor solid

		transition all .3s ease-in-out

		&:focus
			border-bottom 2px maincolor solid
			color maincolor

	ul
		list-style none

		a
			display block
			text-decoration none
			color inherit
			transition all .3s ease-in-out
			line-height 1.5em

			&:hover
				color maincolor

#stars
	position absolute
	z-index -1
	user-select none
	top 0
	left 0

//REACT
#app
	height 100%
	width 100%

.wrapper
	height 100%
	width 100%

	display flex
	flex-direction column
	align-items center
	justify-content center

.greeter
	pointer-events none
	user-select none
	opacity .5

.clocks
	display flex
	pointer-events none
	user-select none
	opacity .5

	.clock
		padding-right 2em
